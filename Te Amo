  <script>
    const images = [
      "https://i.postimg.cc/fTXTFW5Y/now.jpg",
      "https://i.postimg.cc/3x6xkyL4/now-3.png",
      "https://i.postimg.cc/21KpbBYk/now-1.png",
      "https://i.postimg.cc/tY9GLjDj/now-2.png"
    ];

    let currentIndex = 0;
    const imgElement = document.getElementById('slideshow-img');

    setInterval(() => {
      currentIndex = (currentIndex + 1) % images.length;
      imgElement.src = images[currentIndex];
    }, 3000);
  </script>

  <script src="https://cdn.jsdelivr.net/npm/tsparticles@3.3.0/tsparticles.bundle.min.js"></script>
  <script>
    tsParticles.load("particles-js", {
      fullScreen: { enable: false },
      background: { color: "transparent" },
      particles: {
        number: { value: 50 },
        color: { value: "#ff00aa" },
        shape: { type: "circle" },
        opacity: { value: 0.5 },
        size: { value: { min: 1, max: 4 } },
        move: { enable: true, speed: 1, direction: "none", random: false, straight: false, outModes: "out" }
      },
      interactivity: {
        events: { onHover: { enable: false }, onClick: { enable: false } }
      },
      detectRetina: true
    });
  </script>
